class Solution:
    def judgeSquareSum(self, c: int) -> bool:
        sqrt = int(c**(0.5))
        left = 0
        right = sqrt
        while left<=right:
            sum_numbers= left**2 + right**2
            if sum_numbers == c:
                return True
            elif sum_numbers < c:
                left += 1
            else:
                right -=1
        return False

